    "fast-check": "^4.5.3",
    "jest": "^30.2.0",
    "prisma": "^7.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
