{
  "name": "pmp-study-application",
  "version": "1.0.0",
  "description": "Comprehensive PMP Study Application for the 2026 PMP exam",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:shared && npm run build:api && npm run build:web",
    "build:api": "npm run build -w @pmp/api",
    "build:web": "npm run build -w @pmp/web",
    "build:web-svelte": "npm run build -w @pmp/web-svelte",
    "build:shared": "npm run build -w @pmp/shared",
    "start": "npm run start -w @pmp/web",
    "start:api": "npm run start -w @pmp/api",
    "start:web": "npm run start -w @pmp/web",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev -w @pmp/api",
    "dev:web": "npm run dev -w @pmp/web",
    "dev:web-svelte": "npm run dev -w @pmp/web-svelte",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "npm run test --workspaces --if-present",
    "test:api": "npm run test -w @pmp/api",
    "test:web": "npm run test -w @pmp/web",
    "analyze": "npm run analyze -w @pmp/web",
    "db:generate": "npm run db:generate -w @pmp/api",
    "db:migrate": "npm run db:migrate -w @pmp/api",
    "db:push": "npm run db:push -w @pmp/api",
    "db:seed": "npm run db:seed -w @pmp/api",
    "db:seed:ebook": "npm run db:seed:ebook -w @pmp/api",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.958.0",
    "@fastify/rate-limit": "^10.3.0"
  }
}
