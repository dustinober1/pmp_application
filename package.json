{
    "name": "pmp-study-application",
    "version": "1.0.0",
    "description": "Comprehensive PMP Study Application for the 2026 PMP exam",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "npm run build --workspaces",
        "build:api": "npm run build -w @pmp/api",
        "build:web": "npm run build -w @pmp/web",
        "build:shared": "npm run build -w @pmp/shared",
        "dev": "npm run dev --workspaces --if-present",
        "dev:api": "npm run dev -w @pmp/api",
        "dev:web": "npm run dev -w @pmp/web",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx --fix",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "test": "npm run test --workspaces --if-present",
        "test:api": "npm run test -w @pmp/api",
        "test:web": "npm run test -w @pmp/web",
        "db:generate": "npm run db:generate -w @pmp/api",
        "db:migrate": "npm run db:migrate -w @pmp/api",
        "db:push": "npm run db:push -w @pmp/api",
        "db:seed": "npm run db:seed -w @pmp/api",
        "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "eslint": "^8.55.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.0.1",
        "prettier": "^3.1.0",
        "typescript": "^5.3.2"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}