{
  "name": "pmp-study-application",
  "version": "1.0.0",
  "description": "Comprehensive PMP Study Application for the 2026 PMP exam",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/web-svelte"
  ],
  "scripts": {
    "build": "npm run build:shared && npm run build:web-svelte",
    "build:web-svelte": "npm run build -w @pmp/web-svelte",
    "build:shared": "npm run build -w @pmp/shared",
    "start": "npm run dev -w @pmp/web-svelte",
    "dev": "npm run dev:web-svelte",
    "dev:web-svelte": "npm run dev -w @pmp/web-svelte",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "npm run test --workspaces --if-present",
    "test:web-svelte": "npm run test -w @pmp/web-svelte",
    "analyze": "echo 'Analysis not supported for svelte yet'",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.958.0",
    "@fastify/rate-limit": "^10.3.0"
  }
}